package ex16.star;

import java.util.Scanner;

public class Program {
    public static void main(String[] args) {
    	
    	for(int j=0; j<10; j++) {
    		for(int i=0; i<10; i++)
    			System.out.printf("%c", '』');
    		
    		System.out.println();
    	}
    	
    	int cnt = 0;
    	for(int j=0; j<10; j++) {
    		cnt += 1;
    		for(int i=0; i<cnt; i++) {
    			System.out.printf("%c", '』');
    		}
    		System.out.println();
    	}

    	for(int j=0; j<10; j++) {
    		for(int i=0; i<j+1; i++) {
    			System.out.printf("%c", '』');
    		}
    		System.out.println();
    	}

    	for(int j=0; j<10; j++) {
    		for(int i=0; i<10-j; i++) {
    			System.out.printf("%c", '』');
    		}
    		System.out.println();
    	}

    } // main
} // class